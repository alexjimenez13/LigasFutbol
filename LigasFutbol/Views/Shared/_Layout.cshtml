<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Liga Deportiva</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" />

    <!-- Estilos personalizados para botones de submenú -->
    <style>
        .submenu-btn {
            background-color: #3f913f;
            color: #000;
            padding: 0.5rem 1rem;
            border-radius: 0.25rem;
            text-decoration: none;
            display: block;
            margin-bottom: 0.5rem;
        }

            .submenu-btn:hover, .submenu-btn:focus {
                background-color: #80cf9e;
                color: #000;
            }

        .submenu-link {
            background-color: #6f8f5a;
            color: #fff;
            padding: 0.5rem 1rem;
            border-radius: 0.25rem;
            text-decoration: none;
            display: block;
            margin-bottom: 0.5rem;
        }

            .submenu-link:hover, .submenu-link:focus {
                background-color: #425735;
                color: #fff;
            }
    </style>
</head>
<body>
    <!-- Navbar superior -->
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Liga Deportiva</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarOffcanvas" aria-controls="sidebarOffcanvas">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="nav-link text-danger ms-auto" asp-controller="Usuario" asp-action="Logout">Cerrar Sesión</a>
        </div>
    </nav>

    <!-- Menú lateral Offcanvas -->
    <div class="offcanvas offcanvas-start bg-dark text-white" tabindex="-1" id="sidebarOffcanvas" aria-labelledby="sidebarOffcanvasLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="sidebarOffcanvasLabel">Menú Principal</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item mb-2">
                    <a class="submenu-btn" asp-controller="Liga" asp-action="Index">Ligas</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="submenu-btn" asp-controller="Equipo" asp-action="Index">Equipos</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="submenu-btn" asp-controller="Jugador" asp-action="Index">Jugadores</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="submenu-btn" asp-controller="Partido" asp-action="Index">Partidos</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="submenu-btn" asp-controller="Resultado" asp-action="Index">Resultados</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="submenu-btn" asp-controller="Estadistica" asp-action="Index">Estadísticas</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="submenu-btn" asp-controller="Clasificacion" asp-action="Index">Tabla de posiciones</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="submenu-btn" asp-controller="Entrenamiento" asp-action="Index">Entrenamientos</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="submenu-btn" asp-controller="Informe" asp-action="Index">Informes</a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Contenido principal -->
    <main class="container mt-3">
        @RenderBody()
        <hr />
        <footer class="text-center small text-muted">© @DateTime.Now.Year Liga Deportiva</footer>
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
