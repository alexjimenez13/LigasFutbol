<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.4.1/css/responsive.dataTables.min.css" />

<div class="container mt-4">
    <h2 class="mb-4">Dashboard</h2>
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header">Últimos Partidos</div>
                <div class="card-body">
                    <table id="tblUltimos" class="display nowrap table table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Local</th>
                                <th>Visitante</th>
                                <th>Resultado</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header">Top Goleadores</div>
                <div class="card-body">
                    <table id="tblGoleadores" class="display nowrap table table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>Jugador</th>
                                <th>Goles</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header">Clasificaciones (Top 3)</div>
                <div class="card-body">
                    <table id="tblClasificaciones" class="display nowrap table table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>Liga</th>
                                <th>Equipo</th>
                                <th>Puntos</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header">Próximos Partidos</div>
                <div class="card-body">
                    <table id="tblProximos" class="display nowrap table table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Local</th>
                                <th>Visitante</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

